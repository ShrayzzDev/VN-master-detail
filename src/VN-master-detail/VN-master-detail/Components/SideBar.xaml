<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VN_master_detail.Components.SideBar"
             x:Name="root">
    <Grid
        BindingContext="{x:Reference root}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <FlexLayout
            Direction="Column"
            JustifyContent="SpaceEvenly">
            <Button
                Text="Recherche"
                TextColor="{DynamicResource PrimaryTextColor}"
                BackgroundColor="{DynamicResource SecondaryBackgroundColor}"
                Command="{Binding NavigationVM.GoToSearch}"/>
            <Button
                Text="Acceuil"
                TextColor="{DynamicResource PrimaryTextColor}"
                BackgroundColor="{DynamicResource SecondaryBackgroundColor}"
                Command="{Binding NavigationVM.GoToHome}"/>
        </FlexLayout>
        <ImageButton
            Grid.Row="1"
            BackgroundColor="{DynamicResource PrimaryBackgroundColor}"
            Source="dotnet_bot.png"
            Command="{Binding NavigationVM.GoToLogin}"/>
    </Grid>
</ContentView>
