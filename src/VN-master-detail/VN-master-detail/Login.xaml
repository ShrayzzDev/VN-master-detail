<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VN_master_detail.Login"
             Title="Login"
             x:Name="root"
             BackgroundColor="{DynamicResource PrimaryBackgroundColor}">
    
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        BindingContext="{x:Reference root}">
        <Label
            Text="{Binding EnterAPIKey, Source={StaticResource appResources}, StringFormat='{0}: '}"
            TextColor="{DynamicResource PrimaryTextColor}"
            FontSize="35"
            Margin="10"/>
        <Entry
            Placeholder="API Token"
            WidthRequest="600"
            TextColor="{DynamicResource PrimaryTextColor}"
            BackgroundColor="{DynamicResource SecondaryBackgroundColor}"
            Text="{Binding LoginVM.ApiKey}"
            Margin="10"/>
        <Button
            Text="{Binding Login, Source={StaticResource appResources}}"
            TextColor="{DynamicResource PrimaryBtnTextColor}"
            BackgroundColor="{DynamicResource SecondaryBackgroundColor}"
            Command="{Binding LoginVM.Login}"
            Margin="10"/>
    </VerticalStackLayout>
</ContentPage>