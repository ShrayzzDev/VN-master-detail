<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:VN_master_detail.Components"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="VN_master_detail.Search"
             Title="Search"
             x:Name="root"
             BindingContext="{x:Reference root}">
    
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            Command="{Binding Novels.SearchNovels}"
            CommandParameter="{Binding Novels.SearchedName}"
            EventName="Appearing"/>
    </ContentPage.Behaviors>
    
    <Grid
        Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <components:SideBar
            SearchBtnColor="DarkCyan"/>
        <ScrollView
            Grid.Column="1">
            <VerticalStackLayout>
                <Entry
                    Text="{Binding Novels.SearchedName}"
                    Placeholder="Visual Novels">
                    <Entry.Behaviors>
                        <toolkit:EventToCommandBehavior
                            Command="{Binding Novels.SearchNovels}"
                            EventName="TextChanged"/>
                    </Entry.Behaviors>
                </Entry>
                <components:NovelList
                    Novels="{Binding Novels.List}"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>